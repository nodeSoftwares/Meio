<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Meio.app.Views.PlaylistView">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Image Height="350" Stretch="UniformToFill" HorizontalAlignment="Stretch" VerticalAlignment="Top"
               Source="avares://Meio.app/Assets/playlistbanner.jpg">
            <Image.Effect>
                <BlurEffect Radius="8" />
            </Image.Effect>
        </Image>
        <Grid ColumnDefinitions="120, *" RowDefinitions="Auto,Auto"> <!--Page Content-->
            <Grid Grid.Column="1" Name="PlaylistBanner"> <!--Playlist Banner -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="45, 36, 0, 0" Spacing="21">
                    <Border Width="280" Height="280" CornerRadius="12"
                            Background="{DynamicResource SecondaryAccentColor}" />
                    <StackPanel Orientation="Vertical" Spacing="20"> <!--PlaylistInfo-->
                        <StackPanel>
                            <TextBlock FontWeight="Bold" FontSize="48">Playlist Name</TextBlock>
                            <TextBlock FontWeight="Light" FontSize="24">Playlist authors</TextBlock>
                        </StackPanel>

                        <StackPanel Spacing="25" Orientation="Horizontal"> <!--PlaylistButtons-->
                            <!--TODO: Make a Tag specific for icons-->
                            <Canvas Classes="IconCanvas" Name="BannerPlaylistPlayIcon" Width="72" Height="72">
                                <Path Classes="IconWhiteInvariant" ZIndex="1"
                                      Data="M30 36V25.6077L39 30.8038L48 36L39 41.1961L30 46.3923V36Z" />

                                <Path Classes="IconSecondary"
                                      Data="M36 66C52.5686 66 66 52.5686 66 36C66 19.4315 52.5686 6 36 6C19.4315 6 6 19.4315 6 36C6 52.5686 19.4315 66 36 66Z" />
                            </Canvas>

                            <Canvas Classes="IconCanvas" Name="BannerPlaylistLikeIcon" Width="48" Height="48">
                                <Path Classes="IconWhiteInvariant"
                                      Data="M15 8C8.92487 8 4 12.9249 4 19C4 30 17 40 24 42.3262C31 40 44 30 44 19C44 12.9249 39.0751 8 33 8C29.2797 8 25.9907 9.8469 24 12.6738C22.0093 9.8469 18.7203 8 15 8Z" />
                            </Canvas>

                            <Canvas Classes="IconCanvas" Name="BannerPlaylistShuffleIcon" Width="48" Height="48">
                                <!-- Right Arrow (Bottom) -->
                                <Path
                                    Stroke="{DynamicResource IconWhiteBrush}"
                                    StrokeThickness="4"
                                    StrokeLineCap="Round"
                                    Data="M40 33L44 37L40 41" />

                                <!-- Right Arrow (Top) -->
                                <Path
                                    Stroke="{DynamicResource IconWhiteBrush}"
                                    StrokeThickness="4"
                                    StrokeLineCap="Round"
                                    Data="M40 7L44 11L40 15" />

                                <!-- Right Curve -->
                                <Path
                                    Stroke="{DynamicResource IconWhiteBrush}"
                                    StrokeThickness="4"
                                    StrokeLineCap="Round"
                                    Data="M44 11H37C29.8203 11 24 16.8203 24 24C24 31.1797 29.8203 37 37 37H44" />

                                <!-- Left Curve -->
                                <Path
                                    Stroke="{DynamicResource IconWhiteBrush}"
                                    StrokeThickness="4"
                                    StrokeLineCap="Round"
                                    Data="M4 37H11C18.1797 37 24 31.1797 24 24C24 16.8203 18.1797 11 11 11H4" />
                            </Canvas>

                            <Canvas Classes="IconCanvas" Name="BannePlaylistOtherIcon" Width="48" Height="48">
                                <Path Classes="IconWhiteInvariant"
                                      Data="M14 24C14 21.7909 12.2091 20 10 20C7.79086 20 6 21.7909 6 24C6 26.2091 7.79086 28 10 28C12.2091 28 14 26.2091 14 24Z" />
                                <Path Classes="IconWhiteInvariant"
                                      Data="M28 24C28 21.7909 26.2091 20 24 20C21.7909 20 20 21.7909 20 24C20 26.2091 21.7909 28 24 28C26.2091 28 28 26.2091 28 24Z" />
                                <Path Classes="IconWhiteInvariant"
                                      Data="M42 24C42 21.7909 40.2091 20 38 20C35.7909 20 34 21.7909 34 24C34 26.2091 35.7909 28 38 28C40.2091 28 42 26.2091 42 24Z" />
                            </Canvas>
                        </StackPanel> <!--/PlaylistButtons-->
                    </StackPanel> <!--/PlaylistInfo-->
                </StackPanel>
            </Grid><!--Playlist Banner-->

            <Grid Grid.Column="1" Grid.Row="1" Margin="70, 100, 0, 0" RowDefinitions="Auto, Auto, Auto" RowSpacing="15">
                <StackPanel Orientation="Horizontal" Spacing="300">
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <Border Width="56" Height="56" CornerRadius="12"
                                Background="{DynamicResource SecondaryAccentColor}" />
                        <TextBlock Name="PlaylistSongTitle0" Text="Title 0" FontSize="24" VerticalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="40">
                        <TextBlock Name="PlaylistSongLength0" Text="0:00" FontSize="24" VerticalAlignment="Center" />
                        <TextBlock Name="PlaylistSongIndex0" Text="1" FontSize="24" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="300">
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <Border Width="56" Height="56" CornerRadius="12"
                                Background="{DynamicResource SecondaryAccentColor}" />
                        <TextBlock Name="PlaylistSongTitle1" Text="Title 1" FontSize="24" VerticalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="40">
                        <TextBlock Name="PlaylistSongLength1" Text="0:00" FontSize="24" VerticalAlignment="Center" />
                        <TextBlock Name="PlaylistSongIndex1" Text="2" FontSize="24" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid> <!--/Page Content-->
    </Grid>
</UserControl>